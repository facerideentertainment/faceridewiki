  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 10003
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 10004
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 10005
